#:kivy 2.0.0

CreateScreen:

    BoxLayout:
        id: box
        orientation: 'vertical'

        Label:
            text: 'Create New Library'
            pos_hint: {'left': 1}
            size_hint: 0.6, 0.05

        TextInput:
            text: 'Library Name...'
            pos_hint: {'left': 1}
            size_hint: 0.6, 0.05

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.5

            FileExplorer:
                dirselect: True
                pos_hint: {'top': 1}
                size_hint: 1, 1

            BoxLayout:
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size:self.size
                LibraryList:
                    id: librarylist

                    canvas.before:
                        Color:
                            rgba: 0, 1, 1, 0.5
                        Rectangle:
                            pos: self.pos
                            size:self.size


